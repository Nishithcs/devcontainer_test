// For format details, see https://aka.ms/devcontainer.json.
{
	// A display name for the container, shown in the UI.
	"name": "Python & Flask Advanced Example",

	// Use Docker Compose to orchestrate our services.
	"dockerComposeFile": "docker-compose.yml",

	// The name of the service within docker-compose.yml to use for the dev container.
	"service": "app",

	// The path of the workspace folder inside the container.
	"workspaceFolder": "/workspace",

	// --- Port Forwarding & UI ---
	"forwardPorts": [5000, 6379],
	"portsAttributes": {
		"5000": {
			"label": "Flask App",
			"onAutoForward": "openPreview"
		},
		"6379": {
			"label": "Redis DB",
			"onAutoForward": "silent"
		}
	},

	// --- Lifecycle Hooks ---
	// A command to run after the container is created.
	"postCreateCommand": "bash .devcontainer/post-create.sh",

	// --- VS Code Customizations ---
	"customizations": {
		"vscode": {
			// A list of VS Code extension IDs to install.
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-azuretools.vscode-docker",
				"redhat.vscode-yaml",
				"VisualStudioExptTeam.vscodeintellicode"
			],
			// Default settings for the VS Code instance inside the container.
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.linting.pylintEnabled": true,
				"python.linting.enabled": true
			}
		}
	},

	// --- Features ---
	// Add pre-packaged functionality. Here, we add the GitHub CLI.
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},

	// --- Container User ---
	// Run as the non-root 'vscode' user to avoid permission issues.
	"remoteUser": "vscode"
}
